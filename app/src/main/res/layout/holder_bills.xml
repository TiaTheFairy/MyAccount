<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bill_iv_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/bill_default"/>

    <TextView
        android:id="@+id/bill_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bill_iv_type"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:text="@string/billtype_default"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/bill_tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/bill_tv_type"
        android:text="@string/accounttype_cash"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/bill_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="+0.00"
        android:textSize="30sp"/>

</RelativeLayout>